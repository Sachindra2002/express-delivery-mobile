<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wave"
    tools:context=".ViewServiceCenterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/yellow"></com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.AppBarLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coordinator_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/center_id"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:gravity="center"
                        android:text="Service Center ID #219"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_centerName"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/center_id"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Center Name"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/centerName"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/center_id"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/_center_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_centerName"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/center_city"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_centerName"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="City"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/_center_address"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_center_city"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Address"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/center_address"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/_center_city"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />


                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card_1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/title_vehicle"
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:gravity="center"
                                    android:text="Vehicle Information"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/_vehicleNumber"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_vehicle"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Vehicle Number"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/vehicleNumber"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_vehicle"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/_vehicleType"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/vehicleNumber"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Vehicle Type"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/vehicleType"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/vehicleNumber"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_4"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/title_packages"
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:gravity="center"
                                    android:text="Managed Packages"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                                    android:id="@+id/swipe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/title_packages">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recycler_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/coordinator_layout" />

                                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_5"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@id/card_4"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/title_files"
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:gravity="center"
                                    android:text="Users"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:layout_below="@+id/title_files"
                                        android:id="@+id/recycler_view_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


            </ScrollView>


        </RelativeLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/nav_menu_admin">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>