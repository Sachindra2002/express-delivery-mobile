<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardBackgroundColor="#F5F5F5"
    android:layout_marginBottom="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="85">

            <TextView
                android:id="@+id/status"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/buttons"
                android:gravity="center"
                android:padding="5dp"
                android:text="Status"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_senderName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="From"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/senderName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:layout_below="@+id/status"
                android:text="Name Here"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/_description"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/_senderName"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Description"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_senderName"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Box of Thermal Paste"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_type"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/_description"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Parcel Type"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Medium 40 X 40"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_weight"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/_type"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Weight"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_type"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="4KG" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>