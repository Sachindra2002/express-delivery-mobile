<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wave"
    tools:context=".ViewPackageAgentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/yellow"></com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.AppBarLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coordinator_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/package_id"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:gravity="center"
                        android:text="Details for package ID #122"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_package_description"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/package_id"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Package Description"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/package_description"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/package_id"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/_package_date"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_package_description"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Date Created"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/package_date"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_package_description"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/package_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_package_date"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_package_status"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_package_date"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Status"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/_drop_off_date"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_package_status"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Drop Off Date"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/drop_off_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_package_status"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/_pick_up_date"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_drop_off_date"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Pick up Date"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/pick_up_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_drop_off_date"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_weight"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_pick_up_date"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Weight"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_pick_up_date"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_parcel_type"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_weight"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Parcel Type"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/parcel_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_weight"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_receiver_name"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_parcel_type"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Receiver Name"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/receiver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_parcel_type"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_receiver_contact"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_receiver_name"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Receiver Contact"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/receiver_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_receiver_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_receiver_email"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_receiver_contact"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Receiver Email"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/receiver_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_receiver_contact"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_payment_method"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_receiver_email"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Payment Method"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_receiver_email"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_total_cost"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_payment_method"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Total Cost"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/total_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_payment_method"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_pieces"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/_total_cost"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="No of Pieces"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/pieces"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/_total_cost"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_pick_up_address"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/_pieces"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Pick up Address"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/pick_up_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/_pieces"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/_drop_off_address"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/_pick_up_address"
                        android:layout_marginLeft="15dp"
                        android:padding="5dp"
                        android:text="Drop Off Address"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/drop_off_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/_pick_up_address"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card_1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/title_customer"
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:gravity="center"
                                    android:text="User Information"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/_customer_name"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_customer"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Customer Name"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/customer_name"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_customer"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/_customer_contact"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/_customer_name"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Customer Contact"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/customer_contact"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/_customer_name"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />

                            </RelativeLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/card_2"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/title_center"
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:gravity="center"
                                    android:text="Center Information"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/_center"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_center"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Service Center"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/center"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_center"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/_centerAddress"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/_center"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Center Address"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/centerAddress"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/_center"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/card_3"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/title_driver"
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:gravity="center"
                                    android:text="Driver Information"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/_driver_name"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_driver"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Driver"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/driver_name"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title_driver"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/_driver_contact"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/_driver_name"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Driver Contact"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/driver_contact"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/_driver_name"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:gravity="right"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black" />
                            </RelativeLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </ScrollView>


        </RelativeLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/nav_menu_agent">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>