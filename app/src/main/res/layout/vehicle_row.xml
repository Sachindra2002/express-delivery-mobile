<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardBackgroundColor="#F5F5F5"
    android:layout_marginBottom="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="85">

            <TextView
                android:id="@+id/vehicle_status"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/buttons"
                android:gravity="center"
                android:padding="5dp"
                android:text="Status"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_vehicle_number"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_status"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Vehicle Number"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/vehicle_number"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_status"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Name Here"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/_vehicle_type"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/_vehicle_number"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Vehicle Type"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_vehicle_number"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Lorry"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/_vehicle_id"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/_vehicle_type"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Vehicle ID"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/vehicle_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_vehicle_type"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="129"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>