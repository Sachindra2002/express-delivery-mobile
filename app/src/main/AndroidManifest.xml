<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.express_delivery_mobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Express_Delivery_Mobile"
        android:usesCleartextTraffic="${usesCleartextTraffic}">

        <provider
            android:name=".Provider.AddPackageToLocalStorage"
            android:authorities="com.example.express_delivery_mobile.Provider"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".AddDriverActivity" />
        <activity android:name=".DriverActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".AgentActivity" />
        <activity android:name=".DriverAcceptedMailsActivity" />
        <activity android:name=".AgentAcceptedMailsActivity" />
        <activity android:name=".DriverProfileActivity" />
        <activity android:name=".SendPackageActivity" />
        <activity android:name=".ForYouActivity" />
        <activity android:name=".FromYouActivity" />
        <activity android:name=".TrackPackageActivity" />
        <activity android:name=".AgentDriverListActivity" />
        <activity android:name=".AdminDriverListActivity" />
        <activity android:name=".AgentDriverProfileActivity" />
        <activity android:name=".AdminDriverProfileActivity" />
        <activity android:name=".AgentListActivity" />
        <activity android:name=".ServiceCenterListActivity" />
        <activity android:name=".DisputesActivity" />
        <activity android:name=".ViewInquiryActivity" />
        <activity android:name=".ViewDisputeActivity" />
        <activity android:name=".ViewServiceCenterActivity" />
        <activity android:name=".AdminPackageListActivity" />
        <activity android:name=".ViewLocalStoragePackagesActivity" />
        <activity android:name=".ViewPackageAdminActivity" />
        <activity android:name=".AddAgentActivity" />
        <activity android:name=".VehicleListActivity" />
        <activity android:name=".EditAdminDetailsActivity" />
        <activity android:name=".TransitListActivity" />
        <activity android:name=".NewShipmentsActivity" />
        <activity android:name=".ViewPackageAgentActivity" />
        <activity android:name=".ViewPackageDriverActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>